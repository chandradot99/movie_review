= form_for(@review) do |f|
  - if @review.errors.any?
    #error_explanation
      h2
        = pluralize(@review.errors.count, "error")
        | prohibited this review from being saved:
      ul
        - @review.errors.full_messages.each do |message|
          li= message
  .field
    = f.label :rating
    br
    = f.number_field :rating
  .field
    = f.label :comment
    br
    = f.text_area :comment
  .actions
    = f.submit
